{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "",
  "scripts": {
    "build": "nest build",
    "lint": "biome check .",
    "format": "biome format . --write",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "NODE_ENV=testing jest --watch",
    "test:cov": "NODE_ENV=testing jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=testing jest --config ./test/jest-e2e.json",
    "test:unit": "NODE_ENV=testing jest --config ./test/jest-unit.json",
    "prisma:generate": "dotenv -e .env.development.local -- npx prisma generate --schema=src/core/prisma/schema.prisma",
    "prisma:migrate": "dotenv -e .env.development.local -- npx prisma migrate dev --schema=src/core/prisma/schema.prisma",
    "prisma:studio": "dotenv -e .env.development.local -- npx prisma studio --schema=src/core/prisma/schema.prisma",
    "prisma:deploy": "dotenv -e .env.development.local -- npx prisma migrate deploy --schema=src/core/prisma/schema.prisma",
    "swagger:generate": "NODE_ENV=development dotenv -e .env.development.local -- ts-node -r tsconfig-paths/register scripts/generate-swagger.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "6.15.0",
    "@types/handlebars": "^4.0.40",
    "@types/pdfkit": "^0.17.4",
    "add": "^2.0.6",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "dotenv-cli": "^11.0.0",
    "exceljs": "^4.4.0",
    "handlebars": "^4.7.8",
    "nestjs-telegraf": "^2.9.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.17.2",
    "puppeteer": "^24.34.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.15.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
