generator client {
  provider = "prisma-client-js"
  // output   = "/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id          Int      @id @default(autoincrement())
  name        String
	login       String @unique
	password    String
  telegram_id String?
	role        TeacherRole @default(TEACHER)
	timezone    Timezone?
	telegram_link String?

	lessons Lesson[]
	students Student[]
	regular_lessons RegularLesson[]

  created_at  DateTime @default(now())
	deleted_at DateTime?

	@@map("teacher")
}

model Student {
  id         Int        @id @default(autoincrement())
  name       String
  class      Int
  birth_date DateTime
	balance    Int @default(0)
	notifyAboutBirthday Boolean @default(true)
	notifyAboutLessons Boolean @default(true)
	bookUntilCancellation Boolean @default(false)
  created_at DateTime   @default(now())
	teacher_id Int?

	teacher     Teacher?  @relation(fields: [teacher_id], references: [id], onDelete: Cascade)

	regular_lessons RegularLesson[]
  telegrams  Telegram[]
  lessons    Lesson[]
	telegram_tokens TelegramToken[]

	deleted_at DateTime?

	@@map("student")
}

model RegularLesson {
	id Int @id @default(autoincrement())
	plan_id Int
	student_id Int
	teacher_id Int
	start_time String
	week_day WeekDay
	start_period_date DateTime
	end_period_date DateTime

	created_at DateTime @default(now())
	deleted_at DateTime?

	teacher     Teacher  @relation(fields: [teacher_id], references: [id], onDelete: Cascade)
	student     Student  @relation(fields: [student_id], references: [id], onDelete: Cascade)
	plan        Plan     @relation(fields: [plan_id], references: [id])

	lessons Lesson[]

	@@map("regular_lesson")
}

model Telegram {
  id          Int      @id @default(autoincrement())
  student_id  Int
  telegram_id String @unique
	username String?
	first_name String?
  type        TelegramType @default(STUDENT)
  created_at  DateTime @default(now())

  student     Student  @relation(fields: [student_id], references: [id], onDelete: Cascade)

	@@map("telegram")
}

model LessonNotification {
  id          Int      @id @default(autoincrement())
  lesson_id     Int
  notified_at   DateTime @default(now())
  
  lesson       Lesson   @relation(fields: [lesson_id], references: [id])

  @@unique([lesson_id]) // чтобы не было дубликатов
}

model TelegramToken {
	id Int @id @default(autoincrement())
	student_id Int
	token String @unique
	expired_at DateTime
	created_at DateTime @default(now())

	student     Student  @relation(fields: [student_id], references: [id], onDelete: Cascade)

	@@map("telegram_token")
}

model Lesson {
  id          Int      @id @default(autoincrement())
  student_id  Int
	teacher_id Int
  plan_id     Int
	status      LessonStatus @default(PENDING_UNPAID)
	comment     String?
	date  DateTime @db.Timestamptz
	is_regular Boolean @default(false)

	payment_status Boolean @default(false)
  created_at  DateTime @default(now())
	is_paid Boolean @default(false)
	is_free Boolean @default(false)
	rescheduled_lesson_id Int?
	rescheduled_lesson_date DateTime?
	rescheduled_to_lesson_id Int?
	rescheduled_to_lesson_date DateTime?

	regular_lesson_id Int?

	lesson_notifications LessonNotification[]

	teacher     Teacher  @relation(fields: [teacher_id], references: [id], onDelete: Cascade)
  student     Student  @relation(fields: [student_id], references: [id], onDelete: Cascade)
  plan        Plan     @relation(fields: [plan_id], references: [id])

	regular_lesson RegularLesson? @relation(fields: [regular_lesson_id], references: [id])

	@@map("lesson")
	@@unique([student_id, date, teacher_id])
}

model Plan {
  id            Int         @id @default(autoincrement())
  plan_type     PlanType
  plan_currency PlanCurrency
	plan_name     String
  duration      Int
	plan_price    Int
  created_at    DateTime    @default(now())
	deleted_at    DateTime?

  lessons       Lesson[]
	regular_lessons RegularLesson[]

	@@map("plan")
}

enum TelegramType {
  STUDENT
  PARENT
}

enum PlanType {
  INDIVIDUAL
  PAIR
}

enum PlanCurrency {
  USD
  EUR
  PLN
	BYN
}

enum LessonStatus {
  PENDING_PAID
	PENDING_UNPAID
  COMPLETED_PAID
	COMPLETED_UNPAID
	MISSED
	RESCHEDULED
  CANCELLED
}

enum TeacherRole {
  TEACHER
  ADMIN
}

enum Timezone {
	BY
	PL
}

enum WeekDay {
	MONDAY
	TUESDAY
	WEDNESDAY
	THURSDAY
	FRIDAY
	SATURDAY
	SUNDAY
}